@model IEnumerable<DataEntryTest.Models.EdsSetMetricTypes>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRepetition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsResistance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDistance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsRepetition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsResistance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDistance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
