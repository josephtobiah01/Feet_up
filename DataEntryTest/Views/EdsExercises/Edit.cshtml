@model DataEntryTest.Models.EdsExercise

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>EdsExercise</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FkTrainingId" class="control-label"></label>
                <select asp-for="FkTrainingId" class="form-control" asp-items="ViewBag.FkTrainingId"></select>
                <span asp-validation-for="FkTrainingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkExerciseTypeId" class="control-label"></label>
                <select asp-for="FkExerciseTypeId" class="form-control" asp-items="ViewBag.FkExerciseTypeId"></select>
                <span asp-validation-for="FkExerciseTypeId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSkipped" /> @Html.DisplayNameFor(model => model.IsSkipped)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsComplete" /> @Html.DisplayNameFor(model => model.IsComplete)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="EndTimeStamp" class="control-label"></label>
                <input asp-for="EndTimeStamp" class="form-control" />
                <span asp-validation-for="EndTimeStamp" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCustomerAddedExercise" /> @Html.DisplayNameFor(model => model.IsCustomerAddedExercise)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
