@model IEnumerable<DataEntryTest.Models.EdsExercise>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSkipped)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsComplete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTimeStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCustomerAddedExercise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkExerciseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkTraining)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSkipped)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsComplete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTimeStamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCustomerAddedExercise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkExerciseType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkTraining.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
